<Window x:Class="Bingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        xmlns:viewmodels="clr-namespace:Bingo.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Bingo Application" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="1">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <Grid Background="LightGoldenrodYellow">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <TextBlock Text="Welcome to Bingo!" FontSize="48" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,50" Foreground="DarkBlue"/>
                
                <TextBlock Text="What would you like to do?" FontSize="20" 
                           HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="DarkSlateGray"/>
                
                <Button Content="Start Bingo Caller" Command="{Binding StartCallerCommand}" 
                        Height="60" FontSize="18" Margin="0,0,0,20" 
                        Background="LightGreen" FontWeight="SemiBold"/>
                
                <Button Content="Generate Bingo Cards" Command="{Binding GenerateCardsCommand}" 
                        Height="60" FontSize="18" Margin="0,0,0,20" 
                        Background="LightBlue" FontWeight="SemiBold"/>
                
                <Button Content="Exit" Command="{Binding ExitCommand}" 
                        Height="40" FontSize="16" Margin="0,20,0,0" 
                        Background="LightCoral"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
