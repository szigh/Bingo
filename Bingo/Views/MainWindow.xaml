<Window x:Class="Bingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        d:DataContext="{d:DesignInstance Type=local:BingoCallerViewModel}"
        mc:Ignorable="d"
        Title="Bingo Caller" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="Space" Command="{Binding CallNextNumberCommand}"/>
    </Window.InputBindings>
    <Grid Background="LightGoldenrodYellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Main calling area-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
            <TextBlock Text="{Binding CurrentCall}" FontSize="144" FontWeight="Bold" Foreground="DarkBlue" HorizontalAlignment="Center" Margin="-20"/>
            <TextBlock Text="{Binding Info}" FontSize="24" HorizontalAlignment="Center" Margin="20"/>
            <Button Content="Call Next Number (space)" Command="{Binding CallNextNumberCommand}" Width="300" Height="50" FontSize="16"/>
        </StackPanel>
        
        <!--Called numbers board-->
        <local:CalledNumbersBoard Grid.Column="1" 
                                   Margin="30"
                                   DataContext="{Binding NumbersBoard}"/>

    </Grid>
</Window>
