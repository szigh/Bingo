<Window x:Class="Bingo.Views.CardGeneratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Bingo.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:CardGeneratorViewModel}"
        mc:Ignorable="d"
        Title="Bingo Card Generator" Height="500" Width="700">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="1">
            <MenuItem Header="_File">
                <MenuItem Header="_Print Cards" Command="{Binding PrintCardsCommand}" InputGestureText="Ctrl+P"/>
                <Separator/>
                <MenuItem Header="_Close" Click="Close_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Background="LightBlue" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <TextBlock Text="Bingo Card Generator" FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="DarkBlue"/>
                
                <GroupBox Header="Card Settings" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Number of Cards:" FontSize="16" Margin="0,0,0,10"/>
                        <TextBox Text="{Binding NumberOfCards, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16" Padding="5" Margin="0,0,0,20"/>
                        
                        <Button Content="Generate Cards" Command="{Binding GenerateCardsCommand}" 
                                Height="40" FontSize="16" Margin="0,0,0,10"/>
                        
                        <Button Content="Print Cards" Command="{Binding PrintCardsCommand}" 
                                Height="40" FontSize="16"/>
                    </StackPanel>
                </GroupBox>
                
                <TextBlock Text="{Binding StatusMessage}" FontSize="14" 
                           HorizontalAlignment="Center" TextWrapping="Wrap" 
                           Foreground="DarkGreen" FontStyle="Italic"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
